# Database Configuration
DATABASE_URL=postgresql+asyncpg://demo_user:demo_pass@localhost:5432/demo_db

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key

# Cache (Redis)
REDIS_URL=redis://localhost:6379

# AI Services - Add your API keys
OPENAI_API_KEY=your-openai-api-key
LANGCHAIN_API_KEY=your-langchain-api-key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_PROJECT=your-project-name
LANGSMITH_ORG_ID=your-org-uuid
LANGSMITH_PROJECT_ID=your-project-uuid

# Figma Integration
FIGMA_PAT=your-figma-personal-access-token

# Authentication
AUTH_SECRET=your-auth-secret-key-here
AUTH_URL=http://localhost:3000

# Monitoring & Observability
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_FILE=
LOG_REQUEST_BODY=false
LOG_RESPONSE_BODY=false
LOG_SQL_QUERIES=false

# Security
SECRET_KEY=your-super-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Epic 003 - Safety Guardrails
# Enable PII detection in uploaded images (requires OpenAI API key)
PII_DETECTION_ENABLED=false
# Maximum file upload size in bytes (default: 10MB)
MAX_UPLOAD_SIZE=10485760
# Maximum image resolution in pixels (default: 25MP)
MAX_IMAGE_PIXELS=25000000
