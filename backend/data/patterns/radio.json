        "description": "Controlled selected value"
      },
      {
        "name": "defaultValue",
        "type": "string",
        "optional": true,
        "scope": "RadioGroup",
        "description": "Uncontrolled default value"
      },
      {
        "name": "onValueChange",
        "type": "function",
        "optional": true,
        "scope": "RadioGroup",
        "description": "Callback when selection changes"
      },
      {
        "name": "disabled",
        "type": "boolean",
        "optional": true,
        "scope": "RadioGroup | RadioGroupItem",
        "description": "Disable entire group or individual item"
      },
      {
        "name": "required",
        "type": "boolean",
        "optional": true,
        "scope": "RadioGroup",
        "description": "Mark group as required"
      },
      {
        "name": "name",
        "type": "string",
        "optional": true,
        "scope": "RadioGroup",
        "description": "Form field name"
      },
      {
        "name": "value",
        "type": "string",
        "optional": false,
        "scope": "RadioGroupItem",
        "description": "Value of the radio button"
      },
      {
        "name": "className",
        "type": "string",
        "optional": true,
        "scope": "RadioGroup | RadioGroupItem",
        "description": "Additional CSS classes"
      }
    ],
