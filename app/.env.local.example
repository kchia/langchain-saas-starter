# Authentication Configuration (Auth.js v5)
AUTH_SECRET=your-auth-secret-key-here-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
API_URL=http://localhost:8000

# AI Services Configuration (for client-side if needed)
# Note: Keep API keys on backend only for security
NEXT_PUBLIC_OPENAI_MODEL=gpt-4o
NEXT_PUBLIC_VISION_MODEL=gpt-4o

# Application Configuration
NEXT_PUBLIC_APP_NAME=ComponentForge
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_ENVIRONMENT=development

# Component Generation Settings
NEXT_PUBLIC_DEFAULT_DESIGN_SYSTEM=shadcn
NEXT_PUBLIC_SUPPORTED_FRAMEWORKS=react,next

# Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_SUPPORTED_IMAGE_TYPES=image/png,image/jpeg,image/webp

# Analytics & Monitoring (optional)
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# AI Observability (LangSmith)
NEXT_PUBLIC_LANGSMITH_PROJECT=component-forge

# Feature Flags
NEXT_PUBLIC_ENABLE_FIGMA_INTEGRATION=true
NEXT_PUBLIC_ENABLE_SCREENSHOT_UPLOAD=true
NEXT_PUBLIC_ENABLE_ACCESSIBILITY_TESTING=true
NEXT_PUBLIC_ENABLE_STORYBOOK_GENERATION=true

# Development Settings
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true

# External Services
NEXT_PUBLIC_FIGMA_CLIENT_ID=your-figma-client-id
# Note: Figma API keys should be kept on backend for security

# Rate Limiting (client-side display)
NEXT_PUBLIC_RATE_LIMIT_REQUESTS_PER_MINUTE=60
NEXT_PUBLIC_RATE_LIMIT_DISPLAY=true