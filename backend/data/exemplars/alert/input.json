        "type": "'info' | 'success' | 'warning' | 'error'",
        "description": "Alert variant"
      },
      {
        "name": "title",
        "type": "string",
        "description": "Alert title"
      },
      {
        "name": "children",
        "type": "React.ReactNode",
        "description": "Alert message content"
      },
      {
        "name": "icon",
        "type": "React.ReactNode",
        "description": "Custom icon (optional)"
      },
      {
        "name": "onClose",
        "type": "() => void",
        "description": "Close handler (makes alert dismissible)"
      }
    ],
    "events": [
      {
        "name": "onClose",
        "type": "() => void",
        "description": "Called when alert is dismissed"
      }
    ],
    "states": [],
    "accessibility": [
      {
        "name": "role",
        "description": "Should be 'alert' for important messages or 'status' for status updates"
      },
      {
        "name": "aria-live",
        "description": "Should be 'polite' or 'assertive' depending on urgency"
      },
      {
        "name": "aria-atomic",
        "description": "Should be 'true' to announce entire alert"
      }
    ]
  }
