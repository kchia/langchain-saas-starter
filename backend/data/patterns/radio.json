    "usage_examples": [
      {
        "title": "Basic Radio Group",
        "code": "<RadioGroup defaultValue=\"option-one\">\n  <div className=\"flex items-center space-x-2\">\n    <RadioGroupItem value=\"option-one\" id=\"option-one\" />\n    <label htmlFor=\"option-one\">Option One</label>\n  </div>\n  <div className=\"flex items-center space-x-2\">\n    <RadioGroupItem value=\"option-two\" id=\"option-two\" />\n    <label htmlFor=\"option-two\">Option Two</label>\n  </div>\n</RadioGroup>"
      },
      {
        "title": "Controlled Radio Group",
        "code": "const [value, setValue] = React.useState(\"card\")\n\n<RadioGroup value={value} onValueChange={setValue}>\n  <div className=\"flex items-center space-x-2\">\n    <RadioGroupItem value=\"card\" id=\"card\" />\n    <label htmlFor=\"card\">Credit Card</label>\n  </div>\n  <div className=\"flex items-center space-x-2\">\n    <RadioGroupItem value=\"paypal\" id=\"paypal\" />\n    <label htmlFor=\"paypal\">PayPal</label>\n  </div>\n  <div className=\"flex items-center space-x-2\">\n    <RadioGroupItem value=\"apple\" id=\"apple\" />\n    <label htmlFor=\"apple\">Apple Pay</label>\n  </div>\n</RadioGroup>"
      },
      {
        "title": "Radio Group with Descriptions",
        "code": "<RadioGroup defaultValue=\"comfortable\">\n  <div className=\"flex items-center space-x-2\">\n    <RadioGroupItem value=\"default\" id=\"r1\" />\n    <div className=\"grid gap-1.5 leading-none\">\n      <label htmlFor=\"r1\" className=\"font-medium\">\n        Default\n      </label>\n      <p className=\"text-sm text-muted-foreground\">\n        Standard spacing and sizing\n      </p>\n    </div>\n  </div>\n  <div className=\"flex items-center space-x-2\">\n    <RadioGroupItem value=\"comfortable\" id=\"r2\" />\n    <div className=\"grid gap-1.5 leading-none\">\n      <label htmlFor=\"r2\" className=\"font-medium\">\n        Comfortable\n      </label>\n      <p className=\"text-sm text-muted-foreground\">\n        More spacing for easier interaction\n      </p>\n    </div>\n  </div>\n</RadioGroup>"
      },
      {
        "title": "Horizontal Radio Group",
        "code": "<RadioGroup defaultValue=\"yes\" className=\"flex space-x-4\">\n  <div className=\"flex items-center space-x-2\">\n    <RadioGroupItem value=\"yes\" id=\"yes\" />\n    <label htmlFor=\"yes\">Yes</label>\n  </div>\n  <div className=\"flex items-center space-x-2\">\n    <RadioGroupItem value=\"no\" id=\"no\" />\n    <label htmlFor=\"no\">No</label>\n  </div>\n</RadioGroup>"
      },
      {
        "title": "Radio Group with Fieldset",
        "code": "<fieldset>\n  <legend className=\"text-sm font-medium mb-2\">\n    Choose your notification preference\n  </legend>\n  <RadioGroup defaultValue=\"all\">\n    <div className=\"flex items-center space-x-2\">\n      <RadioGroupItem value=\"all\" id=\"all\" />\n      <label htmlFor=\"all\">All notifications</label>\n    </div>\n    <div className=\"flex items-center space-x-2\">\n      <RadioGroupItem value=\"important\" id=\"important\" />\n      <label htmlFor=\"important\">Important only</label>\n    </div>\n    <div className=\"flex items-center space-x-2\">\n      <RadioGroupItem value=\"none\" id=\"none\" />\n      <label htmlFor=\"none\">None</label>\n    </div>\n  </RadioGroup>\n</fieldset>"
      },
      {
        "title": "Disabled Radio Option",
        "code": "<RadioGroup defaultValue=\"option1\">\n  <div className=\"flex items-center space-x-2\">\n    <RadioGroupItem value=\"option1\" id=\"option1\" />\n    <label htmlFor=\"option1\">Available option</label>\n  </div>\n  <div className=\"flex items-center space-x-2\">\n    <RadioGroupItem value=\"option2\" id=\"option2\" disabled />\n    <label\n      htmlFor=\"option2\"\n      className=\"text-muted-foreground cursor-not-allowed\"\n    >\n      Disabled option\n    </label>\n  </div>\n</RadioGroup>"
      }
    ]
  }
}
